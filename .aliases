# -----------------------------------------------------------------------------
# Functions
# -----------------------------------------------------------------------------

# Create directory and cd into it
mkcd() {
  mkdir -p "$1" && cd "$1"
}

# Quick find file by name
ff() {
  fd "$1" 2>/dev/null || find . -name "*$1*" 2>/dev/null
}

# Quick grep in current directory
rgg() {
  rg "$1" 2>/dev/null || grep -r "$1" . 2>/dev/null
}

# Git commit with conventional commit format
gcf() {
  local type="$1"
  local scope="$2"
  local msg="$3"
  git commit -m "${type}(${scope}): ${msg}"
}

# Port check
port() {
  lsof -i ":$1"
}
